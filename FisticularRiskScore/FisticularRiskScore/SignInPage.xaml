<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    NavigationPage.HasNavigationBar="False"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FisticularRiskScore.SignInPage"
    BackgroundImageSource="ic_background">
    <StackLayout Padding="20, 102">
        <Label Text="The Fistula Risck Score Application" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="Title" TextColor="White" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0, 26, 0, 0">
            <Label Padding="0, 14, 0, 0" Text="New arround here?" TextColor="White" />
            <Label Padding="0, 14, 0, 0" Text="Sign Up" FontAttributes="Bold" TextColor="White" TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSignUp" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>

        <Entry x:Name="mailEntry" Text="admin@admin.com" Margin="0, 25, 0, 0" Placeholder="Enter Email Adress" BackgroundColor="White" Keyboard="Email" HeightRequest="50" ReturnType="Next" TextChanged="OnUserValidation" />
        <Label x:Name="labelMailError" TextColor="Red" FontSize="Caption" />
        <Entry x:Name="passwordEntry" Text="Qwe123!" Margin="0, 13, 0, 0" Placeholder="Enter Password" BackgroundColor="White" IsPassword="True" HeightRequest="50" ReturnType="Go" TextChanged="OnPasswordValidation" />
        <Label x:Name="labelPasswordError" TextColor="Red" FontSize="Caption" />

        <Label Padding="0, 10, 0, 10" Text="Forgot password?" TextColor="White" TextDecorations="Underline" FontSize="Body" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer />
            </Label.GestureRecognizers>
        </Label>
        <Button x:Name="buttonSignIn" Text="Sign In" BackgroundColor="#c10213" CornerRadius="10" HeightRequest="60" TextTransform="None" TextColor="#990207" Clicked="OnSignIn" />
        <Label Padding="0, 7, 0, 10" Text="Sing In with QR code" TextColor="White" TextDecorations="Underline" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer />
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
</ContentPage>